<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <title>Rapport</title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.png" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/css/flaticon.css" />
    <link rel="stylesheet" href="/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="/css/owl.theme.css" />
    <link rel="stylesheet" href="/css/magnific-popup.css" />

    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/royal-preload.css" />
    <style>
        .byline {
            color: black;
        }

        .entry-title a {
            font-size: 20px;
            font-weight: 500;
        }

        .rates-wages {
            display: flex;
            justify-content: space-around;
        }

        tr td,
        tr th {
            text-align: center !important;
        }

        .schedule,
        .filename {
            display: flex;
            align-items: center;

        }

        .schedule h6,
        .filename h6 {
            color: black;
        }
    </style>
</head>

<body class="royal_preloader ">
    <div id="page" class="site">
        <%- include("partials/navbar") %>

        <div id="content" class="site-content">
            <div class="page-header flex-middle">
                <div class="container">
                    <div class="inner flex-middle">
                        <% if(wages){ %>
                        <h1 class="page-title">Minimum Wages for <span style="font-weight: bolder;">
                                <%= wages.state %></span> </h1>
                        <% }else{ %>
                        <h1 class="page-title">No data available </h1>
                        <% } %>
                        <ul id="breadcrumbs" class="breadcrumbs none-style">
                            <li><a href="/">Home</a></li>
                            <li class="active">Minimum Wages</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <% if(wages){ %>
        <div style="text-align: center;padding:30px">
            <h6>Effective Date: <%= wages.effectiveDate %> </h6>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-2 schedule">
                    <h6 style="display: inline;"><%= wages.schedule %> </h6>
                </div>
                <div class="col-lg-8">
                    <table class="table ">
                        <thead class="thead-dark">
                            <tr class="table-head">

                                <th scope="col">Category of workmen/Employees</th>
                                <th scope="col">Minimum rates of wages in Rupees <span class="rates-wages"><span>Per
                                            Month</span><span>Per
                                            Day</span></span></th>

                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0; i<wages.category.length; i++){ %>
                            <tr>

                                <td> <%= wages.category[i] %> </td>
                                <td class="rates-wages"><span><%= wages.minimumRates.ratesPerMonth[i] %> </span>
                                    <span><%= wages.minimumRates.ratesPerDay[i] %> </span></td>

                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-2 filename">
                    <h6>File <a target="_blank" href="/uploads/<%-wages.filename%> "><i class="fas fa-file-pdf"></i></a>
                    </h6>
                </div>
            </div>
        </div>
        <% }%>



    </div><!-- #page -->
    <%- include("partials/footer") %>
    <a id="back-to-top" href="#" class="show"><i class="flaticon-up-arrow"></i></a>
    <!-- jQuery -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.magnific-popup.min.js"></script>
    <script src="/js/jquery.isotope.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/easypiechart.min.js"></script>
    <script src="/js/jquery.countdown.min.js"></script>
    <script src="/js/scripts.js"></script>
    <script src="/js/header-mobile.js"></script>
    <script src="/js/royal_preloader.min.js"></script>
    <script>
        window.jQuery = window.$ = jQuery;
        (function ($) {
            "use strict";
            //Preloader
            Royal_Preloader.config({
                mode: 'logo',
                logo: '/images/logo.svg',
                logo_size: [160, 75],
                showProgress: true,
                showPercentage: true,
                text_colour: '#000000',
                background: '#ffffff'
            });
        })(jQuery);
    </script>
</body>

</html>