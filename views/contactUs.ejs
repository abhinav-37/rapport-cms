    <!-- for the contact us -->
      <script>
        $("#question-submit").click(function (e) {
            e.preventDefault();
            let data = { name: $("#question_name").val(), comapnyName: $("#question_comapny").val(), email: $("#question_email").val(), customerNumber: $("#question_mobile").val(), enquiryFor: $("#question_enquiry").val() };
            $.ajax({
                type: "POST",
                url: "/questionForm",
                data: {data:JSON.stringify(data)} ,
                success: function (data) {
                    console.log(data)
                    if (data === "Unsuccessfull, please fill all the fields!") {
                        window.alert(data);
                    } else {
                        window.alert(data);
                        $("#question_name").val("");
                        $("#question_comapny").val("");
                        $("#question_email").val("");
                        $("#question_mobile").val("");
                        $("#question_enquiry").val("")
                    }

                }
            })
        })

    </script>
