<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head.ejs") %>
    <script src="https://cdn.ckeditor.com/ckeditor5/23.1.0/classic/ckeditor.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <style>
        .rapport-start,
        .rapport-super,
        .rapport-select {
            box-shadow: 0px 0px 5px black;
            padding: 20px;
        }

        .pricing_area {
            box-shadow: 0px 0px 5px black;
            padding: 20px;
        }

        .procedure_area,
        .about_service,
        .documents_required,
        .eligibility,
        .faq_area,
        .service_name,
        .service_url,
        .advantages,
        .stepsArea {
            box-shadow: 0px 0px 5px black;
            padding: 20px;
            margin-top: 30px;
        }

        .form-control,
        .btn {
            border-radius: 0;
        }

        .form-main {
            margin-top: 150px;
            margin-bottom: 50px;
            padding-bottom: 30px;
        }
    </style>
</head>


<body>
    <!-- Including navbar and sidebar from the partials -->
    <%- include("partials/navbar_sidebar.ejs") %>
    <div class="container form-main">
        <h3>Service Page creator</h3>
        <form action="/blogsGenerator" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <div class="form-group service_name">
                    <h4>Name</h4>
                    <label for="nameOfService">Enter the Title of the Blog</label>
                    <input name="nameOfBlog" required type="text" class="form-control" id="nameOfService"
                        placeholder="Name">
                </div>

                <div class="form-group service_name">
                    <h4>Image upload</h4>
                    <label for="image">Upload an image for the blog </label>
                    <button><input type="file" name="image" id="image"></button>
                </div>

                <div class="form-group documents_required">
                    <h4>Blog Description</h4>
                    <textarea placeholder="It should be a list" name="blog_description" id="blog_description"
                        class="form-control" rows="3"></textarea>
                </div>

            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>

    </div>

    <script>
        ClassicEditor
            .create(document.querySelector('#blog_description'), {
                height: 500
            }); 
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <%- include("partials/footerJs.ejs") %>
</body>

</html>