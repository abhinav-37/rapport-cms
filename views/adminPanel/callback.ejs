<!DOCTYPE html>
<html lang="en">


<%- include("partials/head.ejs") %>
<script src="https://cdn.ckeditor.com/ckeditor5/23.1.0/classic/ckeditor.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<style>
    .rapport-start,
    .rapport-super,
    .rapport-select {
        box-shadow: 0px 0px 5px black;
        padding: 20px;
    }

    .pricing_area {
        box-shadow: 0px 0px 5px black;
        padding: 20px;
    }

    .procedure_area,
    .about_service,
    .documents_required,
    .eligibility,
    .faq_area,
    .service_name,
    .service_url,
    .advantages,
    .stepsArea {
        box-shadow: 0px 0px 5px black;
        padding: 20px;
        margin-top: 30px;
    }

    .form-control,
    .btn {
        border-radius: 0;
    }

    .form-main {
        margin-top: 150px;
        margin-bottom: 50px;
        padding-bottom: 30px;
    }

    .table-wrap {
        padding: 0 100px 100px 100px;
    }

    th {
        text-align: center;
    }

    td {
        text-align: center;
    }

    .alert-container {
        padding-top: 100px;
        display: flex;
        justify-content: center;


    }

    .alert {
        width: 400px;
        display: flex;
        justify-content: space-around;
        border-radius: 0;
    }

    .month-day {
        display: flex;
        justify-content: space-around;
    }

    .rates-form {
        display: flex;
        justify-content: center;

    }

    .btn {
        color: white !important;
    }
</style>



<body>
    <!-- Including navbar and sidebar from the partials -->
    <%- include("partials/navbar_sidebar.ejs") %>
    <!-- alert to show the message -->
    <div class="container alert-container">

        <% if(passedMessage){ %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= passedMessage %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <% } %>
    </div>



    <div class="table-wrap">
        <h5 style="padding: 30px;">* Just click on the Customer's mail address to send them the email.</h5>
        <table class="table style2 style3">
            <thead class="table-inverse">
                <tr>

                    <th><span>Full Name</span></th>
                    <th><span>Contact Info.</span></th>
                    <th>
                        <span>Email</span>
                    </th>
                    <th>Status</th>
                    <th>Update Status</th>
                </tr>
            </thead>
            <tbody>
                <form action="/admin/callback" method="post">
                    <div class="form-group">
                        <% callData.forEach(function(d){ %>

                        <tr>
                            <td><%= d.full_name %></td>
                            <td>
                                <%= d.mobile %>
                            </td>

                            <td>
                                <a class="" href="mailto:<%=d.email%>"><%= d.email %> </a>
                            </td>

                            <td><%= d.status %> </td>

                            <td><button value="<%= d.id %>" name="CallDoneButton" class="btn btn-success">Call
                                    Done</button></td>
                        </tr>
                        <% }) %>
                    </div>
                </form>

            </tbody>
        </table>
    </div>

    <script>

        $("#remove-alert").click(function () {
            alert.addClass("fade");
            alert.removeClass("show")
        });

    </script>
    <%- include("partials/footerJs.ejs") %>
</body>

</html>