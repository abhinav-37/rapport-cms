    <script>
        let alert = $(".alert");
        $('input[type="file"]').on('change', function () {
            Object.values(this.files).forEach(function (file) {
                if (file.type != 'application/pdf') {
                    alert.removeClass("fade");
                    alert.addClass("show");
                }
            })
        });
        $("#remove-alert").click(function () {
            alert.addClass("fade");
            alert.removeClass("show")
        })
